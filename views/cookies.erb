<% counter = 1 %>
<h2 class = "centertext header">Cookies</h2>
<div class = "container row productdisplay">
<% $catalog.each do |product|%>
  <% if product.type == 'Cookie' %>
  <div class="col-md-4 centertext">
    <div class = '<%= product.type %>-<%= counter %>'>
      <img src='<%= product.image %>' alt='<%= product.name %>'/>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
      <h6>$ <%= price(product.price) %></h6>
    </div>
  </div>
  <% counter += 1 %>
  <% end %>
<% end %>
</div>
