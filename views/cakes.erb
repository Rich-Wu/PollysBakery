<% counter = 1 %>
<h2 class = 'centertext header'>Cakes</h2>
<div class = "container row productdisplay">
<% $catalog.each do |product|%>
  <% if product.type == 'Cake' %>
  <div class="col-md-4 centertext">
    <div class = '<%= product.type %>-<%= counter %>'>
      <div class = "productimage" style = "background-image: url('<%= product.image %>')"></div>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
      <h6>$ <%= price(product.price) %></h6>
    </div>
  </div>
  <% counter += 1 %>
  <% end %>
<% end %>
</div>
<%= erb :form %>
